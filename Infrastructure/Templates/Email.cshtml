@using quiz_web_app.Infrastructure.Templates;
@model EmailModel
<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;900&display=swap" rel="stylesheet">
    <style>
        body {
            margin: 0;
            padding: 0;
            font-family: "Roboto", sans-serif;
            font-size: 16px;
            line-height: 1.5;
            background-color: #4D3487;
            background-size: cover;
            background-repeat: no-repeat;
            background-position: center;
        }

        .container {
            width: 100%;
            max-width: 600px;
            margin: 0 auto;
            padding: 20px;
            background-color: rgba(255, 255, 255, 0.8);
        }

        .header {
            background-color: #4D3487;
            color: #ffffff;
            text-align: center;
            padding: 10px;
        }

        .content {
            padding: 20px;
        }

        .title {
            font-size: 20px;
            font-weight: bold;
            text-align: center;
            margin-bottom: 20px;
        }

        .button {
            display: block;
            width: 100%;
            max-width: 200px;
            margin: 0 auto;
            padding: 10px;
            text-align: center;
            text-decoration: none;
            background-color: #ec3d82;
            color: #ffffff;
            font-size: 18px;
            border-radius: 15px;
            transition: all 0.2s ease;
        }

            .button:hover {
                background-color: #4d3487;
            }

        .text {
            text-align: center;
            margin-bottom: 20px;
        }

        .ip-info {
            text-align: center;
            margin-bottom: 10px;
        }

        .ip-label {
            font-weight: bold;
        }
    </style>
</head>
<body>
    <table role="presentation" cellspacing="0" cellpadding="0" border="0" align="center" style="width:100%; max-width:600px; margin:auto; background-color:transparent;">
        <tr>
            <td class="container" style="padding:20px;">
                <table role="presentation" cellspacing="0" cellpadding="0" border="0" align="center" style="width:100%;">
                    <tr>
                        <td class="header" style="background-color:#4D3487; color:#ffffff; text-align:center; padding:10px;">
                            Здравствуйте!
                        </td>
                    </tr>
                    <tr>
                        <td class="content" style="padding:20px;">
                            <p class="title" style="font-size:20px; font-weight:bold; text-align:center; margin-bottom:20px;">
                                Вы получили это письмо, потому что использовали эту почту при регистрации в приложении Quiz Mesh App
                            </p>
                    <tr>
                        <td align="center">
                            <a class="button" href="@Model.Href" target="_blank" style="display:block; width:100%; max-width:200px; margin:0 auto; padding:10px; text-align:center; text-decoration:none; background-color:#ec3d82; color:#ffffff; font-size:18px; border-radius:15px; transition:all 0.2s ease;">
                                Подтвердить
                            </a>
                        </td>
                    </tr>
                    <p class="text" style="text-align:center; margin-bottom:20px;">
                        Если это были не Вы, то, возможно, кто-то пытается использовать вашу почту
                    </p>
                    <tr>
                        <td align="center">
                            <div class="ip-info" style="text-align:center; margin-bottom:10px;">
                                <span class="ip-label" style="font-weight:bold;">IP ADDRESS</span><br>
                                        @Model.RequestInfo.ip
                            </div>
                            <div class="ip-info" style="text-align:center; margin-bottom:10px;">
                                <span class="ip-label" style="font-weight:bold;">User agent</span><br>
                                        @Model.RequestInfo.userAgent
                            </div>
                        </td>
                    </tr>
            </td>
        </tr>
    </table>
    </td>
    </tr>
    </table>
</body>
</html>
